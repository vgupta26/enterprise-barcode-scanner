<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    >


    <TextView
        android:id="@+id/label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Barcode Value for large:"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />

    <CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label2"
        android:layout_marginTop="110dp"

        />
    <TextView
        android:id="@+id/barcodeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Select a Date Type:"
        android:layout_below="@+id/calendarView2"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />
    <Spinner
        android:id="@+id/typeValues"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_below="@+id/calendarView2"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="260dp"
        />
    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/typeValues"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:text="Update"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/addImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="535dp"
        android:layout_marginTop="738dp"
        android:text="Add Images"
        android:textSize="25dp"
        />
</RelativeLayout>